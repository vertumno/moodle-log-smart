# MoodleLogSmart API Configuration

# ============================================================================
# AUTHENTICATION
# ============================================================================

# API Keys (comma-separated)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Example: xvB4n7KQ_m2Hp9Ls3Dw8ZtYfRj1Nc6Ak5Uq0Oe2Vg,another-key-here
API_KEYS=your-api-key-here,another-api-key-here

# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed Origins (comma-separated)
# Development:
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Production example:
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================================================
# ENVIRONMENT
# ============================================================================

# Environment mode (development or production)
ENVIRONMENT=development

# ============================================================================
# FILE PROCESSING
# ============================================================================

# Job timeout in seconds (default: 600 = 10 minutes)
JOB_TIMEOUT_SECONDS=600

# ============================================================================
# CLEANUP & RETENTION
# ============================================================================

# Cleanup interval in seconds (default: 3600 = 1 hour)
CLEANUP_INTERVAL_SECONDS=3600

# Time-to-live for completed jobs in hours (default: 24)
TTL_COMPLETED_HOURS=24

# Time-to-live for failed jobs in hours (default: 1)
TTL_FAILED_HOURS=1

# ============================================================================
# VALIDATION LIMITS
# ============================================================================

# Maximum CSV columns (default: 100)
MAX_CSV_COLUMNS=100

# Maximum CSV rows to validate (default: 1000000)
MAX_CSV_ROWS=1000000

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limits (requests per time period)
RATE_LIMIT_UPLOAD=100/hour
RATE_LIMIT_STATUS=1000/hour
RATE_LIMIT_DOWNLOAD=50/hour

# ============================================================================
# LOGGING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
