{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "context": "."
  },
  "deploy": {
    "startCommand": "cd backend && poetry run uvicorn src.moodlelogsmart.api.main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 30
  },
  "envs": {
    "BACKEND_HOST": "0.0.0.0",
    "BACKEND_PORT": "$PORT",
    "PYTHONUNBUFFERED": "1",
    "LOG_LEVEL": "INFO",
    "DEBUG": "false",
    "MAX_FILE_SIZE_MB": "50",
    "JOB_TIMEOUT_MINUTES": "10",
    "FILE_RETENTION_HOURS": "24"
  }
}
