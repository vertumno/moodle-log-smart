# MoodleLogSmart Environment Configuration
# Copy this file to .env and update values for your environment

# ==============================================
# Backend Configuration
# ==============================================

# Backend server settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
PYTHONUNBUFFERED=1

# ==============================================
# API Security (REQUIRED)
# ==============================================

# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# Comma-separated for multiple keys
API_KEYS=your-generated-api-key-here

# ==============================================
# File Management
# ==============================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=50

# File system paths (inside container)
TEMP_DIR=/app/temp
UPLOADS_DIR=/app/uploads
RESULTS_DIR=/app/results

# ==============================================
# Job Configuration
# ==============================================

# Job timeout in minutes
JOB_TIMEOUT_MINUTES=10

# File retention in hours (auto-cleanup)
FILE_RETENTION_HOURS=24

# ==============================================
# Frontend Configuration
# ==============================================

# API URL for frontend
VITE_API_URL=http://localhost:8000

# Frontend build mode
NODE_ENV=production

# ==============================================
# Docker & Deployment
# ==============================================

COMPOSE_PROJECT_NAME=moodlelogsmart

# ==============================================
# Logging
# ==============================================

LOG_LEVEL=INFO

# ==============================================
# Development Only (optional)
# ==============================================

DEBUG=false
